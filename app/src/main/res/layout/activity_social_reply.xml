<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.social.reply.SocialReplyActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/social_reply_tb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="Chatting"
                app:titleTextColor="#000000" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/social_reply_rv"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/social_reply_myimg"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_ios_w"/>


                <EditText
                    android:id="@+id/social_reply_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:ems="10" />

                <TextView
                    android:id="@+id/social_reply_uploadtxt"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="게시"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>