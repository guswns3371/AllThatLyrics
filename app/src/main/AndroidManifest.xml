<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.guswn.allthatlyrics">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" /> <!-- c2dm은 gcm서비스 명칭들 중 하나이고, RECEIVE로 메시지를 받는 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 디바이스가 꺼진 상태에서도 알림이 오면 진동이나 기타 이벤트를 처리 -->
    <!-- <uses-feature android:name="android.hardware.camera2"/> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/allthatlyrics_icon_1"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity" />
        <activity android:name=".Main.Login" />
        <activity android:name=".Main.Register" />
        <activity android:name=".Home.Home" />
        <activity android:name=".Home.Frag3_account.Setting" />
        <activity android:name=".Main.Logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home.Frag3_account.Userinfo_Edit" />
        <!-- 카메라로 사진찍을 때 필요 한 부분 FileProvider -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.guswn.allthatlyrics"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- 카메라로 사진찍을 때 필요 한 부분 FileProvider -->

        <activity android:name=".Home.Frag1_friends.InnerFriendActivity" />
        <activity android:name=".Home.Frag4_chat.InnerChatActivity" />
        <activity android:name=".Home.Frag4_chat.ChatAddActivity" />
        <activity android:name=".Home.Frag4_chat.ShowImageActivity" />

        <service android:name=".Firebase.FireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Firebase.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Home.Frag3_account.Follow_info_activity" />
        <activity android:name=".Home.Frag3_account.FollowTab" />
        <activity
            android:name=".Home.Frag3_account.OtherFollowAccount"
            android:label="@string/title_activity_othet_follow_account" />
        <activity
            android:name=".Home.Frag2_social.ShowGalleryActivity"
            android:label="@string/title_activity_show_gallery" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->
        <activity android:name=".Home.Frag2_social.AdvancedEditPhotoActivity" />
        <activity android:name=".Home.Frag2_social.MakeSocialContentActivity" />
        <activity android:name=".Home.Frag3_account.Home_frag3_history" />
        <activity android:name=".Home.Frag3_account.Home_frag3_bookmark" />
        <activity android:name=".Home.Frag2_social.InnerSocialActivity" />
        <activity android:name=".Home.Frag3_account.Home_frag3_like"></activity>
    </application>

</manifest>